@{
    Layout = "/Views/Shared/_Layout.cshtml";
    int totalPrice = 0;
}
@using Pizza.Models.ViewModels;
@model List<BusketViewModel>;
<link rel="stylesheet" href="/css/Basket/basket.css">

<div class="basket-items">
    @foreach(var item in Model)
    {
        <div class="basket-item">
            <a class="busket-deleteall" asp-action="DeleteAll" asp-controller="Basket" asp-route-id="@item.ProductId">
                <img src="/images/adminImage/delete.svg">
            </a>
            <div class="basket-image">
                <img src="@item.Product.ImgPath" alt="">
            </div>
            <div class="basket-name-product">
                <p>@item.Product.Name</p>
            </div>
            <div class="basket-price-product">
                <a class="busket-delete" asp-action="SingleDelete" asp-controller="Basket" asp-route-id="@item.ProductId">
                    <img src="/images/mainImage/DeleteProduct.png">
                </a>
                <p><span>@item.Product.Price</span>.руб</p>
                <a class="busket-add" asp-action="SingleAdd" asp-controller="Basket" asp-route-id="@item.ProductId">
                    <img src="/images/mainImage/AddProduct.png">
                </a>
            </div>
            <div class="quantity-product">
                <p>@item.Quantity</p>
            </div>
        </div>
        totalPrice += item.Product.Price * item.Quantity;
    }
    <div class="buy">
        <p>Итого: <span>@totalPrice</span>.руб</p>
        <a class="oplata" href="#">Оплатить</a>
    </div>
</div>

